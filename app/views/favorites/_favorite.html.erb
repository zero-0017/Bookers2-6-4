  <% if book.favorited_by?(current_user) %>
    <p>
      <%= link_to book_favorites_path(book),class: "text-danger", method: :delete, remote: true do %>
        <i class="fas fa-heart unlike-btn"></i><%= book.favorites.count %>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to book_favorites_path(book), method: :post, remote: true do %>
        <i class="fas fa-heart unlike-btn"></i><%= book.favorites.count %>
      <% end %>
    </p>
  <% end %>